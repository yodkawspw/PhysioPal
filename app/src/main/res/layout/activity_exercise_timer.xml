<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABE2AC"
    tools:context=".ExerciseTimer"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="118dp">


    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="162dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="88dp"
        android:layout_height="45dp"
        android:text="00:00"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/btnResume"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#651371"
        android:text="⬜  เริ่มจับเวลาต่อ"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnPause"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#558A3F"
        android:text="▐▐  หยุดชั่วคราว"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3966AB"
        android:text="เริ่มจับเวลา"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#A82A2A"
        android:text="หยุดจับเวลา"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etMinutes"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:hint="ใส่นาทีที่ต้องการกายภาพ"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

    <TextView
        android:id="@+id/textView83"
        android:layout_width="357dp"
        android:layout_height="106dp"
        android:text="&#8226;&#9;&#9;ตั้งเวลาให้เหมาะสมกับการออกกำลังกายของคุณ&#10;&#8226;&#9;&#9;ทำแบบฝึกหัดอย่างต่อเนื่องจนกว่าการนับถอยหลังจะสิ้นสุด&#10;&#8226;&#9;&#9;สามารถกด พักได้หากต้องการหยุดชั่วคราว&#10;&#10;💪 ค่อยๆ ทำ อย่าฝืน ร่างกายจะดีขึ้นในทุกๆ วัน!"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/textView84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;จับเวลาทำกายภาพบำบัด&quot;"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

</androidx.constraintlayout.widget.ConstraintLayout>